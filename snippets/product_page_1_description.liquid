<script>
  function product_page_1_description_handler(){
    changeBuyNowName();
    elevateZoomWidget.init();
    Shopify.getProduct('{{ product.handle }}', productPageJsonLoaded);
    ttCollapseBlock($('.tt-collapse-block'));
